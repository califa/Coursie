<% @page_title = "Show Enrollment: #{@enrollment.student.name} to #{@enrollment.course.name}" %>

<%= link_to("<< Back to List", enrollments_path, :class => 'back-link') %>


<div class="enrollment show">
  <h2>Enrollment Detail View</h2>

  <table summary="Enrollment detail view">
    <tr>
      <th>Course</th>
      <td><%= @enrollment.course.name %></td>
    </tr>
    <tr>
      <th>Student</th>
      <td><%= link_to(@enrollment.student.name, student_path(@enrollment.student.id), :class => 'action edit') %></td>
    </tr>
  </table>
  
</div>
