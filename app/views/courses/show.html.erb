<% @page_title = "Show Course: #{@page.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="course show">
  <h2>Show Course</h2>

  <table summary="Course detail view">
    <tr>
      <th>Subject ID</th>
      <td><%= @course.subject_id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @course.name %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= @course.permalink %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @course.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @course.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @course.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @course.updated_at %></td>
    </tr>
  </table>
  
</div>
