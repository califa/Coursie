<% @page_title = "Show Course: #{@course.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="course show">
  <h2>Show Course</h2>

  <table summary="Course detail view">
    <tr>
      <th>Teacher</th>
      <% if @course.teacher %>
      <td><%= @course.teacher.name %></td>
      <% else %>
      <td>&nbsp;</td>
      <% end %>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @course.name %></td>
    </tr>
    <tr>
      <th>Day</th>
      <td><%= @course.day %></td>
    </tr>
    <tr>
      <th>Time</th>
      <td><%= @course.time %></td>
    </tr>
    <tr>
      <th>Duration</th>
      <td><%= @course.duration %></td>
    </tr>
    <tr>
      <th>Open?</th>
      <td><%= @course.open ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @course.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @course.updated_at %></td>
    </tr>
  </table>
  
</div>
