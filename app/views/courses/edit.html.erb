<% @page_title = "Edit Course: #{@course.name}" %>

<%= link_to("<< Back to List", courses_path) %>

<div class="course edit">
  <section>
  <h1>Update Course</h1>
  <div class="section_container">
  <%= form_for(@course) do |f| %>
  
    <%= render(:partial => 'form', :locals => {:f => f}) %>
    
    <div class="form-buttons">
      <%= submit_tag("Update Course", :class => "submit") %>
    </div>
    
  <% end %>
  </div>
  </section>
</div>
