            <!-- Month navigation -->
            <nav>
                <button type="button" name="prev">Prev</button>
                <span class="month">Feb 2011.</span>
                <button type="button" name="next">Next</button>
            </nav>
            <%= calendar_for(@tasks) do |t| %>
              <%= t.head('sun', 'mon', 'tue', 'wed', 'thu', 'fri', 'sat') %>
              <%= t.day do |day, tasks| %>
                <% day.day %>
                <% tasks.each do |task, type| %>
                  <div class="task"><%= h(task.name) %></div>
                <% end %>
              <% end %>
            <% end %>

			<div class="clear"></div>
    </div>
   <div class="more">
            <a href="#">full calendar...</a>
    </div>
