<%= error_messages_for(@assignments) %>


<table summary="Assignment form fields">
  <tr>
    <th><%= f.label(:course_id, "Course") %></th>
    <td><%= f.select(:course_id, @courses.collect {|course| [course.name, course.id]}, :allow_blank => false) %></td>
  </tr>
  <tr>
    <th><%= f.label(:title, "Assignment Title") %></th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <tr>
    <th><%= f.label(:description, "Assignment Description") %></th>
    <td><%= f.text_area(:description, :size => '40x10') %></td>
  </tr>
  <tr>
    <th><%= f.label(:due_date, "Assignment Due On") %></th>
    <td><%= f.date_select(:due_date) %></td>
  </tr>
  <tr>
    <th><%= f.label(:test, "Is It a Test?") %></th>
    <td><%= f.check_box(:test) %></td>
  </tr>
</table>
